<%= render "shared/header" %>

<h1>投稿詳細ページ</h1>
<div class='comic-img-content'>
  <%= image_tag @comic.image, class: "comic-img" %>
<h3><%= @comic.title %></h3>
<h3>いいね件数: <%= @comic.likes.count %></h3>
<% if current_user.already_liked?(@comic) %>
  <%= button_to 'いいねを取り消す', comic_like_path(@comic), method: :delete %>
<% else %>
  <%= button_to 'いいね', comic_likes_path(@comic) %>
<% end %>

<%= link_to "ホームへ戻る", root_path %>