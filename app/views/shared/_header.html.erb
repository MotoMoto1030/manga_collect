<header>
    <div class="heading">
      <h1><%= link_to '漫画保管庫', root_path, class: "web-title" %></h1>
    </div>
    <%= form_with(url: search_comics_path, local: true, method: :get, class: "search-form") do |form| %>
      <%= form.text_field :keyword, placeholder: "投稿を検索する", class: "search-input" %>
      <%= form.submit "検索", class: "search-btn" %>
    <% end %>
    <div class="navbar">
      <ul class='lists-right'>
         <% if user_signed_in? %> 
          <li><%= link_to current_user.nickname, user_path(current_user.id), class: "user-nickname" %></li>
          <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %></li>
          <li><%= link_to '漫画を投稿！', new_comic_path, class: "sub-title" %></li>
        <% else %> 
          <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
          <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
        <% end %> 
      </ul>
      <ul class="show-lists"></ul>
    </div>
</header>